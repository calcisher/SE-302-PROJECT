<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/17.0" fx:controller="ClassAssignmentSystem.MainViewController">
    <!-- Menü Çubuğu (Menu Bar) -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Upload CSV" />
                        <MenuItem text="Export CSV" />
                        <SeparatorMenuItem />
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Modify Course Assignment" />
                        <MenuItem text="Modify Course Enrollment" />
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <MenuItem text="Weekly Schedules" />
                        <MenuItem text="Course Attendance" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="User Manual" />
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Araç Çubuğu (Tool Bar) -->
    <top>
        <VBox>
            <MenuBar />
            <ToolBar>
                <Button text="Add Course" />
                <Button text="Create Meeting" />
                <Button text="Course List" fx:id="showCourseListButton" />
                <Button text="Class List" fx:id="showClassListButton" />
            </ToolBar>
        </VBox>
    </top>

    <!-- Sağ Kenar Paneli -->
    <right>
        <VBox spacing="10" alignment="CENTER">
            <Button text="Manage Course" />
            <Button text="Create Meeting" />
        </VBox>
    </right>

    <!-- Merkez İçeriği (Varsayılan) -->
    <center>
        <Label/>
    </center>
</BorderPane>
